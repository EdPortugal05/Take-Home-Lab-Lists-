using System;

using System.Linq;

using System.Collections.Generic;



namespace HelloWold;



public static class Program
{
    public static void Main()
    {

        List<string> cart = new List<string>();

        while (true)
        {
            Console.WriteLine("1. Add 2. Remove 3. View 4. Clear 5. Exit");
            int choice = Convert.ToInt32(Console.ReadLine());

            if (choice == 1)
            {
                Console.Write("Item to add: ");
                cart.Add(Console.ReadLine());
            }
            else if (choice == 2)
            {
                Console.Write("Item to remove: ");
                cart.Remove(Console.ReadLine());
            }
            else if (choice == 3)
            {
                Console.WriteLine(string.Join(", ", cart));
            }
            else if (choice == 4)
            {
                cart.Clear();
            }
            else if (choice == 5)
            {
                break;
            }
        }
    }
}
