using System;

using System.Linq;

using System.Collections.Generic;



namespace HelloWold;



public static class Program
{
    public static void Main()

    {

        List<decimal> prices = new List<decimal>();
        decimal price;

        Console.WriteLine("Enter item prices (type -1 to finish):");
        while (true)
        {
            string input = Console.ReadLine();
            if (!decimal.TryParse(input, out price) || (price < 0 && price != -1))
            {
                Console.WriteLine("Invalid input. Please enter a positive number or -1 to finish.");
                continue;
            }
            if (price == -1) break;
            prices.Add(price);
        }

        if (prices.Count > 0)
        {
            Console.WriteLine($"\nTotal items: {prices.Count}");
            Console.WriteLine($"Average price: {prices.Average():C}");
            Console.WriteLine($"Highest price: {prices.Max():C}");
            Console.WriteLine($"Lowest price: {prices.Min():C}");
        }
        else
        {
            Console.WriteLine("No prices entered.");
        }
    }
}
