using System;

using System.Linq;

using System.Collections.Generic;



namespace HelloWold;



public static class Program
{
    public static void Main()
    {

        int currentYear = DateTime.Now.Year;
        List<string> results = new List<string>();

        Console.WriteLine("Enter 5 birth years (e.g., 1990):");

        for (int i = 0; i < 5; i++)
        {
            Console.Write($"Birth year {i + 1}: ");
            string input = Console.ReadLine();

           
            if (!int.TryParse(input, out int birthYear))
            {
                Console.WriteLine("Error: Please enter numbers only.");
                i--; 
                continue;
            }

            if (birthYear < 1900 || birthYear > currentYear)
            {
                Console.WriteLine($"Error: Year must be between 1900 and {currentYear}.");
                i--; 
                continue;
            }

            int age = currentYear - birthYear;

            string category = age switch
            {
                < 0 => "Invalid (Future Birth)",
                < 18 => "Minor",
                < 60 => "Adult",
                _ => "Senior"
            };

            results.Add($"Born in {birthYear} â†’ Age {age}: {category}");
        }

        Console.WriteLine("\nResults:");
        foreach (string result in results)
        {
            Console.WriteLine(result);
        }
    }
}
